                                </dd>
                            </dl>
                        </div>
                    </div>

                </div>
            </div>



            <br />
            <a href="@Url.Action("index")" class="btn btn-success">Or Back To List</a>

        <input type="submit" name="nextBtn" value="Next" class="btn btn-primary pull-right" />

        <br />
        <br />

    </div>

}





