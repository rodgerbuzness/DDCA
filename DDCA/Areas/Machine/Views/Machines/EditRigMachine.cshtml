@model DDCA.Areas.Machine.ViewModel.RigEdit


@{
                /**/

                /**/

                AjaxOptions options = new AjaxOptions();
                options.HttpMethod = "POST";
                options.InsertionMode = InsertionMode.Replace;
                options.UpdateTargetId = "divContainer";

}

@using (Ajax.BeginForm("EditRigMachine", options))
{

    Html.AntiForgeryToken();


    <div class="container">

        <div class="row">

            @Html.HiddenFor(x => x.RigId)
            @Html.HiddenFor(x => x.MachineId)
            <h2 class="text-center text-primary">New Machine Data</h2>
            <hr />
            <div class="col-sm-12">
                <h4 class="text-left text-uppercase text-info"><b>Edit Vehicle Registration Information</b></h4>
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Name, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.RegNo, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.RegNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RegNo, null, new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(x => x.RigType, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.RigType, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RigType, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.RigState, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.RigState, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RigState, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Model, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.Model, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Model, null, new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(x => x.DriverName, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.DriverName, ViewBag.watu as SelectList, "-- Select Name --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.DriverName, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.BoughtDate, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.BoughtDate, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.BoughtDate, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Region, new { @class = "control-label col-sm-2" })

                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Region, ViewBag.RegionList as SelectList, "-- Select Region Name --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Region, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.District, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.District, ViewBag.Dstrct as SelectList, "-- Select District Name --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.District, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Status, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.Status, ViewBag.Statussss as SelectList, "-- Select --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Status, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Remarks, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.Remarks, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Remarks, null, new { @class = "text-danger" })
                        </div>
                    </div>



                </div>
            </div>

            <input type="submit" name="nextBtn" value="Update" class="btn btn-primary col-lg-offset-5" />
        </div>

    </div>

}


